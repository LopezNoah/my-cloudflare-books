---
interface Props {
	title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body class="bg-gray-100">
  <header class="bg-white shadow-md p-4 mb-8">
    <nav class="container mx-auto flex justify-between items-center">
      <a href="/" class="font-bold text-xl">Book Library</a>
      <div class="space-x-4">
        <a href="/books" class="hover:text-gray-700">Books</a>
        <a href="/reading-sessions" class="hover:text-gray-700">Reading Sessions</a>
        <a href="/genres" class="hover:text-gray-700">Genres</a>
      </div>
    </nav>
  </header>
	<slot />
</body>
</html>